@{
    ViewData["Title"] = "Department List";
}
@model IEnumerable<Department>

<h1 class="bg-info text-black">Lol Departments</h1>
<a asp-action="Create" class="btn btn-secondary">Add New Department</a>
<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    @foreach (Department department in Model)
    {
        <tr>
            <td>@department.Id</td>
            <td>@department.Name</td>

            <td>
                <a class="btn btn-sm btn-primary"
                   asp-action="Edit"
                   asp-route-id="@department.Id">Upadte</a>
            </td>
            <td>
                <form asp-action="Delete"
                      asp-route-id="@department.Id" method="post">
                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
            </td>
        </tr>
        
    }
</table>